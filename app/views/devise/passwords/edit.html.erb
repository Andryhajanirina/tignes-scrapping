<div class="container-fluid" >
  <%= bootstrap_devise_error_messages! %>

  <div class="row">
    <div class="form col-md-offset-2 col-md-8 form-contour">
      <div class="form-head">
      </div> 
      <div class="form-body">
        <div class="row">
         
          <div class="form-body-title col-md-offset-1 col-md-10 text-center">
            <h1><%= t('.change_your_password', default: 'Change your password') %></h1>
          </div>
    
          <div class="form-body-info col-md-offset-1 col-md-10">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group col-md-offset-2 col-md-8">
            <%= f.label :password, t('.new_password', default: 'New password') %>
            <%= f.password_field :password, autofocus: true, class: 'form-control'  %>
          </div>

          <div class="form-group col-md-offset-2 col-md-8">
            <%= f.label :password_confirmation, t('.confirm_new_password', default: 'Confirm new password') %>
            <%= f.password_field :password_confirmation, class: 'form-control'  %>
          </div>

          <div class= "form-group col-md-offset-2 col-md-8 text-center" >
            <%= f.submit t('.change_my_password', default: 'Change my password'), class: 'btn btn-form' %>
          </div>

          <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class= "text-center">
    <%= render 'devise/shared/links' %>
  </div>
</div>
